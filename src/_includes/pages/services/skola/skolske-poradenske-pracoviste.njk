{% extends "layouts/base.njk" %}

{% block body %}
    {% include "sections/landing.njk" %}

    <!-- SIDEBAR + CONTENT -->
    <div class="~py-16/24 ~px-4/8 flex items-start gap-16 bg-white dark:bg-gray-900">
        <div class="container m-auto flex max-xl:flex-col items-start gap-16">
            {% include "sections/sidebar.njk" %}

            <!-- INNER CONTENT -->
            <div class="flex-1 ~space-y-16/24">
                <!-- SECTION -->
                <section>
                    <div class="flex flex-col gap-8">
                        <!-- TOPPER + HEADING -->
                        <div class="flex flex-col ~gap-2/3">
                            <span class="topper text-category" data-category="{{ category }}">{{ contentOne.topper }}</span>
                            <h2 class="~text-2xl/4xl text-gray-950 dark:text-white font-extrabold">{{ contentOne.heading }}</h2>
                        </div>

                        {% for item in collections.spp %}
                            <div class="flex flex-col gap-6">
                                <h3 class="text-2xl text-gray-950 dark:text-white font-semibold">{{ item.data.title }}</h3>

                                {% if item.content %}
                                    <div class="prose max-w-none">
                                        {{ item.content | safe }}
                                    </div>
                                {% endif %}

                                {% if item.data.employees.length > 0 %}
                                    <ul class="grid grid-cols-3 gap-6">
                                        {% for item in item.data.employees %}
                                            {% set employee = collections.zamestnanci | findWhere({"fileSlug": item.employee}) %}

                                            {% include "components/employee.njk" %}
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </div>

                            {% if not loop.last %}
                                <!-- SEPARATOR -->
                                <div class="h-px bg-gray-200 dark:bg-gray-800"></div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </section>
            </div>
        </div>
    </div>

    {% include "sections/cta.njk" %}
{% endblock body %}