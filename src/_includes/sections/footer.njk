<footer class="relative pt-16 ~pb-16/24 ~px-4/8 bg-gray-900">
    <div class="container m-auto flex flex-col gap-16">
        <!-- LOGO + NAVIGATION -->
        <div class="flex justify-between">
            <!-- LOGO + DESCRIPTION -->
            <div class="flex flex-col gap-8">
                <!-- LOGO -->
                <div class="flex items-center gap-6">
                    <img
                        src="/assets/svgs/zsmslibchavy_logo.svg"
                        alt="Logo - {{ client.name }}"
                        width="99"
                        height="64"
                        loading="lazy"
                        decoding="async"
                        aria-hidden="true"
                        draggable="false">

                    <span class="text-2xl text-white font-medium leading-8">Základní a mateřská<br>škola Libchavy</span>
                </div>

                <p class="max-w-sm font-lora text-gray-200">{{ footer.description }}</p>
            </div>

            <!-- LINKS -->
            <div class="flex gap-24">
                {% for links in footer.links %}
                    <div class="flex flex-col gap-4">
                        <span class="text-white font-semibold">{{ links.title }}</span>

                        <ul class="flex flex-col gap-2.5">
                            {% for item in links.items %}
                                <li class="group flex items-center gap-2 has-[br]:items-start">
                                    {% if item.icon %}
                                        <img
                                            class="group-has-[br]:mt-0.5"
                                            src="{{ item.icon.url }}"
                                            alt="{{ item.icon.alt }}"
                                            width="20"
                                            height="20"
                                            loading="lazy"
                                            decoding="async"
                                            aria-hidden="true"
                                            draggable="false">
                                    {% endif %}

                                    <a href="{{ item.url }}" target="{{ item.target }}" class="font-sora text-sm text-gray-200 leading-5 hover:text-white hover:underline">
                                        {{ item.text | safe }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- DIVIDER + CREDITS -->
        <div class="flex flex-col gap-4">
            <!-- DIVIDER -->
            <div class="h-px bg-gray-600"></div>

            <!-- CREDITS + PRIVACY POLICY -->
            <div class="flex justify-between">
                <p class="font-lora text-sm text-gray-400">
                    {{ footer.copyright }}
                    <a href="https://coalmarketing.cz/" target="_blank" class="underline hover:text-white">coalmarketing.cz</a>
                </p>

                <a href="{{ footer.privacyPolicy.url }}" target="_blank" class="font-lora text-sm text-gray-400 hover:underline hover:text-white">{{ footer.privacyPolicy.text }}</a>
            </div>
        </div>
    </div>

    <!-- BACKGROUND SHAPE -->
    <img
        class="object-cover absolute top-0 left-0 h-auto w-full -translate-y-[calc(100%-1px)]"
        src="/assets/svgs/footer/footer-shape.svg"
        alt="Grafika oblaku"
        width="1920"
        height="129"
        loading="lazy"
        decoding="async"
        aria-hidden="true"
        draggable="false">
</footer>