<li {% if employee.data.role -%} id="{{ employee.data.role | slug }}" {%- endif %} class="flex flex-col justify-center items-center gap-4 p-5 bg-white dark:bg-gray-950 border-2 border-gray-200 dark:border-gray-800 shadow-md rounded-4xl">
    {% if employee.data.role %}
        <span class="py-1 px-3 bg-category text-sm text-white font-medium rounded-full" data-category="{% if section %}{{ section.key | slug }}{% else %}{{ category }}{% endif %}">
            {{ employee.data.role }}
        </span>
    {% endif %}

    <div class="flex flex-col items-center gap-1">
        <h4 class="text-center text-gray-950 dark:text-white font-semibold">{{ employee.data.title }}</h4>
        <span class="font-lora text-center text-gray-800 dark:text-gray-200">{{ employee.data.function }}</span>
    </div>

    {% if employee.data.email or employee.data.phone %}
        <div class="flex flex-col items-center gap-2">
            {% if employee.data.email %}
                <!-- EMAIL -->
                <div class="flex items-center gap-2">
                    <!-- ICON -->
                    <div class="shrink-0 p-1 bg-category rounded-lg" data-category="{% if section %}{{ section.key | slug }}{% else %}{{ category }}{% endif %}">
                        <img
                            src="/assets/svgs/employees/mail.svg"
                            alt="Ikona emailu"
                            width="20"
                            height="20"
                            loading="lazy"
                            decoding="async"
                            aria-hidden="true"
                            draggable="false">
                    </div>

                    <a href="mailto:{{ employee.data.email }}" class="font-lora text-center text-gray-800 dark:text-gray-200 hover:text-black dark:hover:text-white hover:underline">
                        {{ employee.data.email }}
                    </a>
                </div>
            {% endif %}

            {% if employee.data.phone %}
                <!-- PHONE -->
                <div class="flex items-center gap-2">
                    <!-- ICON -->
                    <div class="shrink-0 p-1 bg-category rounded-lg" data-category="{% if section %}{{ section.key | slug }}{% else %}{{ category }}{% endif %}">
                        <img
                            src="/assets/svgs/employees/call.svg"
                            alt="Ikona telefonu"
                            width="20"
                            height="20"
                            loading="lazy"
                            decoding="async"
                            aria-hidden="true"
                            draggable="false">
                    </div>

                    <a href="tel:{{ employee.data.phone.trim().replaceAll(" ", "") }}" class="font-lora text-center text-gray-800 dark:text-gray-200 hover:text-black dark:hover:text-white hover:underline">
                        {{ employee.data.phone }}
                    </a>
                </div>
            {% endif %}
        </div>
    {% endif %}
</li>